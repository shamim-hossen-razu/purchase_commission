<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Odoo View Definition for Whatsapp Message Form -->
    <record id="send_whatsapp_sale_wizard_view_form" model="ir.ui.view">
        <field name="name">send.whatsapp.sale.wizard.view.form</field>
        <field name="model">send.whatsapp.sale.wizard</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <form string="Whatsapp Message">
                <group>
                    <field name="order_id"/>
                    <field name="partner_id"/>
                    <field name="mobile"/>
                </group>
                <group>
                    <field name="message"/>
                </group>
                <footer>
                    <button name="action_send_whatsapp_sale" string="Send" type="object"/>
                    <button name="cancel" string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>