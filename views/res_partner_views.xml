<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_res_partner_form_inherit_bangladesh" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.bangladesh</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='phone']" position="before">
                <field name="bd_format_address" invisible="True"/>
            </xpath>
            <xpath expr="//div[hasclass('o_address_format')]" position="attributes">
                <attribute name="invisible">bd_format_address</attribute>
            </xpath>
            <xpath expr="//div[hasclass('o_address_format')]" position="after">
                <div>
                    <field name="division_id" placeholder="বিভাগ" class="o_address_division"
                           invisible="not bd_format_address"/>
                    <field name="district_id" placeholder="জেলা " class="o_address_district"
                           invisible="not division_id or not bd_format_address"/>
                    <field name="upazila_id" placeholder="উপজেলা" class="o_address_upazila"
                           invisible="not district_id or not bd_format_address"/>
                    <field name="union_id" class="o_address_union" placeholder="ইউনিয়ন"
                           invisible="not upazila_id or not bd_format_address"/>
                    <field name="road_no" string="Road" placeholder="রাস্তার নাম/নম্বর" class="o_address_street"
                           invisible="not bd_format_address"/>
                    <field name="house_no" string="House/Shop" placeholder="বাড়ি / দোকানের নাম / নম্বর"
                           class="o_address_street" invisible="not bd_format_address"/>
                </div>
            </xpath>
        </field>
    </record>


    <record id="res_partner_commission_view_buttons" model="ir.ui.view">
        <field name="name">res.partner.commission.view.buttons</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="priority" eval="3"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button class="oe_stat_button" type="object" name="action_view_partner_commission"
                        groups="sales_team.group_sale_salesman"
                        invisible="commission_count==0"
                        icon="fa-percent">
                    <field string="Commissions" name="commission_count" widget="statinfo"
                           invisible="commission_count==0"/>
                </button>
            </div>
            <xpath expr="//field[@name='vat']" position="after">
                <field name="related_partner_id" readonly="True"/>
            </xpath>
            <xpath expr="//field[@name='vat']" position="attributes">
                <attribute name="invisible">true</attribute>
            </xpath>
            <xpath expr="//field[@name='category_id']" position="attributes">
                <attribute name="invisible">true</attribute>
            </xpath>
            <xpath expr="//field[@name='phone']" position="before">
                <field name="partner_type"/>
            </xpath>

        </field>
    </record>

</odoo>