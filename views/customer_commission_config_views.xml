<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="view_customer_commission_config_list" model="ir.ui.view">
        <field name="name">customer.commission.config.list</field>
        <field name="model">customer.commission.config</field>
        <field name="arch" type="xml">
            <list string="Customer Commission Configuration">
                <field name="name"/>
                <field name="purchase_target" widget="monetary"/>
                <field name="commission_percent"/>
                <field name="fiscal_year_id" optional="hide"/>
                <field name="active"/>
                <field name="company_id" groups="base.group_multi_company" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_customer_commission_config_form" model="ir.ui.view">
        <field name="name">customer.commission.config.form</field>
        <field name="model">customer.commission.config</field>
        <field name="arch" type="xml">
            <form string="Customer Commission Configuration">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="purchase_target" widget="monetary"/>
                            <field name="commission_percent"/>
                        </group>
                        <group>
                            <field name="fiscal_year_id"
                                   help="Leave empty to apply to current fiscal year"/>
                            <field name="company_id"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_customer_discount_config" model="ir.actions.act_window">
        <field name="name">Customer Commission Rules</field>
        <field name="res_model">customer.commission.config</field>
        <field name="view_mode">list,form</field>
        <field name="target">current</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first discount rule!
            </p>
            <p>
                Define sales targets and corresponding discount percentages for your customers.
                The system will automatically apply the highest applicable discount based on
                customer's fiscal year purchases.
            </p>
        </field>
    </record>



</odoo>