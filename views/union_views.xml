<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_union_form" model="ir.ui.view">
        <field name="name">union.form</field>
        <field name="model">bangladesh.unions</field>
        <field name="arch" type="xml">
            <form string="Union">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="bn_name"/>
                            <field name="union_id"/>
                        </group>
                        <group>
                            <field name="upazila_id"/>
                            <field name="url"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_union_list" model="ir.ui.view">
        <field name="name">union.list</field>
        <field name="model">bangladesh.unions</field>
        <field name="arch" type="xml">
            <list string="Union">
                <field name="union_id"/>
                <field name="name"/>
                <field name="bn_name"/>
                <field name="url"/>
                <field name="upazila_id"/>
            </list>
        </field>
    </record>

    <record id="union_search_view" model="ir.ui.view">
        <field name="name">union.search</field>
        <field name="model">bangladesh.unions</field>
        <field name="arch" type="xml">
            <search string="Search Unions">
                <field name="name"/>
                <field name="bn_name"/>
                <field name="union_id"/>
                <field name="upazila_id"/>
                <filter string="By Upazila" name="by_upazila" domain="[]" context="{'group_by':'upazila_id'}"/>
            </search>
        </field>
    </record>

    <record id="action_union" model="ir.actions.act_window">
        <field name="name">Unions</field>
        <field name="res_model">bangladesh.unions</field>
        <field name="view_mode">list,form,search</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Union
            </p>
        </field>
    </record>

    <menuitem id="menu_union"
              name="Unions"
              action="action_union"
              parent="bd_address_format"
              groups="base.group_user"
              sequence="4"/>
</odoo>