<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_upazila_list" model="ir.ui.view">
        <field name="name">upazila.list</field>
        <field name="model">bangladesh.upazilas</field>
        <field name="arch" type="xml">
            <list string="Upazilas">
                <field name="upazila_id"/>
                <field name="name"/>
                <field name="bn_name"/>
                <field name="url"/>
                <field name="district_id"/>
            </list>
        </field>
    </record>

    <record id="view_upazila_form" model="ir.ui.view">
        <field name="name">upazila.form</field>
        <field name="model">bangladesh.upazilas</field>
        <field name="arch" type="xml">
            <form string="Upazila">
                <sheet>
                    <group>


                        <group>
                            <field name="name"/>
                            <field name="bn_name"/>
                            <field name="upazila_id"/>
                        </group>
                        <group>
                            <field name="district_id"/>
                            <field name="url"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Unions">
                            <field name="union_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="upazila_search_view" model="ir.ui.view">
        <field name="name">upazila.search</field>
        <field name="model">bangladesh.upazilas</field>
        <field name="arch" type="xml">
            <search string="Search Upazilas">
                <field name="name"/>
                <field name="bn_name"/>
                <field name="upazila_id"/>
                <field name="district_id"/>
                <filter string="By District" name="by_district" domain="[]" context="{'group_by':'district_id'}"/>
            </search>
        </field>
    </record>

    <record id="action_upazila" model="ir.actions.act_window">
        <field name="name">Upazilas</field>
        <field name="res_model">bangladesh.upazilas</field>
        <field name="view_mode">list,form,search</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create the first Upazila
            </p>
        </field>
    </record>

    <menuitem id="menu_upazila"
              name="Upazilas"
              action="action_upazila"
              parent="bd_address_format"
              groups="base.group_user"
              sequence="3"/>
</odoo>