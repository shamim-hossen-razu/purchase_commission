<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_product_category_form_inherit_purchase_commission" model="ir.ui.view">
        <field name="name">product.category.form.inherit</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='parent_id']" position="after">
                <field name="remote_category_id" readonly="true"/>
            </xpath>
            <xpath expr="//field[@name='property_account_income_categ_id']" position="replace">
                <field name="property_account_income_categ_id" options="{'no_open': True, 'no_create': True}"/>
            </xpath>
            <xpath expr="//field[@name='property_account_expense_categ_id']" position="replace">
                <field name="property_account_expense_categ_id" options="{'no_open': True, 'no_create': True}"/>
            </xpath>
            <xpath expr="//field[@name='parent_id']" position="replace">
                <field name="parent_id" options="{'no_open': True, 'no_create': True}"/>
            </xpath>
            <xpath expr="//field[@name='property_account_downpayment_categ_id']" position="replace">
                <field name="property_account_downpayment_categ_id" options="{'no_open': True, 'no_create': True}"/>
            </xpath>
        </field>
    </record>
</odoo>