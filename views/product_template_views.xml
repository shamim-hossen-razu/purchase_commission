<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_inherit_related_product" model="ir.ui.view">
        <field name="name">product.template.form.inherit.related_product</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_general']/field[@name='type']" position="before">
                <field name="related_product_id" readonly="1"/>
            </xpath>
        </field>
    </record>
</odoo>